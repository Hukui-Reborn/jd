<div class="col-md-4 col-md-offset-4 user-edit" >
<h3>注册</h3>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_name,label:"用户名" %>
    <%= f.input :email, lable:"邮箱",required: true, autofocus: true %>
    <%= f.input :password, label:"密码",required: true, hint: ("至少#{@minimum_password_length} 位密码" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label:"确认密码",required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "注册" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>
