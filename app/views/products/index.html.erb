<body>


<div class="row">
  <% @products.each do |product|%>
    <div class="col-xs-6 col-md-3">
      <%= link_to product_path(product) do %>
        <% if product.image.present? %>
          <%= image_tag(product.image.thumb.url,class:"thumbnail") %>
        <% else %>
          <%= image_tag("http://ww2.sinaimg.cn/large/006tKfTcgy1fg4mkw5fqdj30el09qt9e.jpg",class:"thumbnail",style:"width:25%;")%>
        <% end %>
      <% end %>
      <%= product.title %> ï¿¥ <%= product.price %>
    </div>
  <% end %>
</div>
</body>
