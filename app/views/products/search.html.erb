<div >
  <div class="row ">
  <% if @query_string.blank? %>
    <div>
      <p class="search-info mt20">关键词好像没填，请填写关键词搜搜索</p>
    </div>
  <% elsif @products.blank? %>
    <p class="search-info mt20">没有找到相关的商品，请输入其他关键词</p>
  <% else %>
    <p class="search-info mt20"> 有关"<%= @query_string %>"的产品 </p>
    </div>
    <div>
      <!-- <div class="table"> -->

          <div class="row ">
            <% @products.each do |product|%>
              <hr />

              <div class="container mb20">

                <div class="col-md-4 welcome-product">
                  <%= link_to product_path(product) do %>
                    <% if product.image.present? %>
                      <%= image_tag(product.image.thumb.url, class:"welcome-product-small-pic") %>
                    <% else %>
                      <%= image_tag("http://ww2.sinaimg.cn/large/006tKfTcgy1fg4mkw5fqdj30el09qt9e.jpg",style:"width:300px;") %>
                    <% end %>
                  <% end %>
                </div>
                <div class="col-md-8">
                  <p class="f24"><%= link_to(product.title, product_path(product),class:"welcome-link") %></p>
                  <div class="f16 mt30 "><%= markdown(product.post.first(80)+"...")%></div>
                  <div class="col-md-6 pb20 mt30 ml-30">
                    <div>
                      <% if product.user.selfie.present? %>
                        <%= image_tag(product.user.selfie.mini.url,class:"welcome-user-image") %>
                      <% else %>
                        <%= image_tag("http://img.qq745.com/uploads/allimg/160430/1-160430203151.jpg", class:"welcome-user-image") %>
                      <% end %>
                      <span class="pl10"><%= product.user.user_name %></span>
                      <span class="pl10"><%= product.updated_at.strftime("%Y/%m/%d")%></span>
                    </div>
                  </div>
                  <div class="col-md-4 col-md-offset-1 f16 mt30">
                    <%= link_to(content_tag(:i,"",class:'fa fa-comments-o'),"#") %> <span><%=product.comments.count%></span>
                    <%= link_to(content_tag(:i,"",class:'fa fa-heart-o ml10'),"#") %> <span><%=product.goods_voters.count%></span>
                  </div>

                </div>
              </div>
            <% end %>
            <!-- <div class="col-md-12 col-lg-9 col-lg-offset-1"> -->
              <!-- <div class="speech"> -->
                <!-- <%#= product.title%> -->
              <!-- </div> -->
              <!-- <div class="pull-right"> -->
                <!-- 发布时间：<%#= product.created_at.to_date %> -->
            <!-- </div> -->
            <!-- <p><%#= link_to(render_highlight_content(product,@query_string),product_path(product),target:"_new") %></p> -->
            <!-- </div> -->
          <!-- </div> -->
        <!-- <% end %> -->
      </div>
    </div>
  </div>

<div class="row">
<div class="search-data" style="text-align:center;">

<%= will_paginate @products, renderer: BootstrapPagination::Rails %>
</div>
</div>
