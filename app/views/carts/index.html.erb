<div class="row cart-bg">
  <div class="wrapper">
    <% if current_cart.cart_items.empty? %>
      <p class="tc f30" style="margin-top:200px;">您的购物车是空的，<a href="/products">去逛逛></a></p>
    <% else %>
      <div class="container tl mt70 mb30">
        <h2> 您的购物车
          <span>
            <%= link_to("清空购物车",clean_carts_path,method: :delete, class:"btn btn-danger pull-right",data:{confirm:"你确定要清空购物车么？"}) %>
          </span>
        </h2>
      </div>
      <section>
        <% current_cart.cart_items.each do |cart_item| %>
          <div class="container cart-item-bg">
            <div class="col-md-2 tc">
              <%= link_to product_path(cart_item.product) do %>
                <% if cart_item.product.image.present? %>
                  <%= image_tag(cart_item.product.image.thumb.url, class:"expert-img") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic",class:"expert-img")%>
                <% end %>
              <% end %>
            </div>
            <div class="col-md-6">
              <p class="f20">
              <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
              </p>
              <p class="f18 fb"><%= cart_item.product.expertname %> | <span class="f16 fn"><%= cart_item.product.experttitle %></span></p>
              <p class="f16"><%= cart_item.product.description %></p>
            </div>
            <div class="col-md-2 f16 cart-item-quantity">
              <%= form_for cart_item, url: cart_item_path(cart_item.product_id) do |f| %>
                <%= f.select :quantity, 1..cart_item.product.quantity %>
                <%= f.submit "更新", data: {disable_with: "Submitting..."}%>
              <% end %>
            </div>
            <div class="col-md-2 tr">
              <p class="f40">
              <%= cart_item.product.price %>
              <span class="f20">元</span>
              </p>
            </div>
          </div>
        <% end %>
        <div class="container f30 mt20">
          <div class="col-md-8">
            总计
          </div>
          <div class="col-md-2 tr">
            <%= render_cart_total_price(current_cart) %> 元
          </div>
          <div class="col-md-2 tr">
            <%= link_to("确认结账",checkout_carts_path,method: :post, class:"btn btn-danger pull-right") %>
          </div>
        </div>
      <% end %>
  </div>
</div>
