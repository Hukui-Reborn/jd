<h1>所有文章</h1>
<div class="col-md-12">
  <div class="article">
    <%= link_to("New article", new_article_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td>#</td>
          <td>
            <%= link_to article_path(article) do %>
              <% if article.image.present? %>
                <%= image_tag(article.image.thumb.url, class:"welcome-article-small-pic") %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
            <% end %>
          </td>
          <td><%= link_to(article.title, article_path(article)) %></td>
          <td><%= article.description %></td>
          <td>
              <%= link_to("Edit", edit_article_path(article), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", article_path(article),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
