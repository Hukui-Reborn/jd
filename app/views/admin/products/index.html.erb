<h2>Product.list</h2>
<div class="pull-right" style="padding-top: 20px;">
  <%= link_to("新增产品", new_admin_product_path, class: "btn btn-primary btn-sm") %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th width="220">Product Pic</th>
      <th>Name</th>
      <th>Price</th>
      <th width="100">Option</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td>
        <%= link_to product_path(product) do %>
          <% if product.image.present? %>
            <%= image_tag(product.image.thumb.url, class:"thumbnail",style:"width:100;heigh:100%;") %>
          <% else %>
            <%= image_tag("http://ww2.sinaimg.cn/large/006tKfTcgy1fg4mkw5fqdj30el09qt9e.jpg",class:"thumbnail",style:"width:100%;")%>
          <% end %>
        <% end %>
      </td>
      <td><%= product.title %></td>
      <td><%= product.price %></td>
      <td><%= link_to("Edit",edit_admin_product_path(product)) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
