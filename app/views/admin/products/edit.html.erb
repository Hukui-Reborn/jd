<h2>Edit product</h2>
<%= simple_form_for [:admin, @product] do |f| %>
  <div>  <%= f.input :title %></div>

  <!-- <div><%= f.input :expertname %></div> -->
  <!-- <div><%= f.input :experttitle %></div> -->
  <div class="group"><%= f.input :post%></div>
  <!-- <div class="group"><%= f.input :description %></div> -->
  <!-- <div class="group"><%= f.input :quantity %></div> -->
  <!-- <div class="group"><%= f.input :price %></div> -->
  <!-- <div class="group"><%= f.input :reply_time %></div> -->
  <% if @product.image.present? %>
    <span>当前文章封面图:</span><br>
    <%= image_tag(@product.image.thumb.url) %>
    <% else %>
    <span>默认文章封面图</span><br>
    <%= image_tag("http://ww2.sinaimg.cn/large/006tKfTcgy1fg4mkw5fqdj30el09qt9e.jpg",class:"thumbnail",style:"width:25%;")%>
  <% end %>
  <div class="group">
    <%= f.input :image, as: :file ,label: "请选择文章封面图"%>
  </div>
  <div class="group" style="margin-bottom:40px;"><%= f.submit "Submit",class:"btn btn-primary",data:{disable_with:"Submting..."} %></div>
<% end %>
